@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<div class="col-md-6 col-md-offset-3">
    <h2>Forgot Password</h2>
    <form name="form" ng-submit="vm.forgotpassword()" role="form">
        <div class="form-group" ng-class="{ 'has-error': form.username.$dirty && form.username.$error.required }">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control" ng-model="vm.ForgotPassword.Email" required />
            <span ng-show="form.username.$dirty && form.username.$error.required" class="help-block">Username is required</span>
        </div>
        <div class="form-actions">
            <button type="submit" ng-disabled="form.$invalid || myApp.dataLoading" class="btn btn-primary">Reset Password</button>
            <img ng-if="myApp.dataLoading" src="data:image/gif;base64," />
            <a href="#login" class="btn btn-link">Back to Login</a>
        </div>
        <div class="form-actions">
            <span style="color:red">
                {{vm.errorMessage}}
            </span>
            <span style="color:green">
                {{vm.successMessage}}
            </span>
        </div>
    </form>
</div>