<div class="col-md-6 col-md-offset-3">
    <h3>
        <span ng-show="!vm.isEdit"> Create World</span>
        <span ng-show="vm.isEdit"> Edit World</span>
    </h3>

    <form name="form" ng-submit="vm.createWorld()" role="form">
        <div class="form-group" ng-class="{ 'has-error': form.worldName.$dirty && form.worldName.$error.required }">
            <label for="worldname">Enter Name</label>
            <input type="text" name="worldName" id="worldName" class="form-control" ng-model="vm.world.WorldName" required />
            <span ng-show="form.worldName.$dirty && form.worldName.$error.required" class="help-block">Name is required</span>
        </div>
        <div class="form-group">
            <label for="worldname">Description</label>
            <input type="text" name="worldName" id="worldName" class="form-control" ng-model="vm.world.Description" />
        </div>
        <div class="form-group">
            <label for="worldname">Debug</label>
            <p>   <input type="checkbox" name="worldDebugFlag" id="worldDebugFlag" ng-model="vm.world.WorldDebugFlag" /></p>
        </div>
        <div class="form-actions">
            <button type="submit" ng-disabled="form.$invalid || myApp.dataLoading" class="btn btn-primary">
                <span ng-show="!vm.isEdit"> Save</span>
                <span ng-show="vm.isEdit"> Save Changes</span>
            </button>
            <a href="#/World" class="btn btn-default">< Go Back</a>
            <img ng-if="myApp.dataLoading" src="data:image/gif;base64," />
        </div>
        <div class="form-actions">
            <span style="color:red">
                {{vm.errorMessage}}
            </span>
        </div>
    </form>
</div>
