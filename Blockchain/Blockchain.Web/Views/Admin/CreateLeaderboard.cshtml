<div class="col-md-6 col-md-offset-3">
    <h3>
        <span> Create Leaderboard</span>
    </h3>

    <form name="form" ng-submit="vm.Leaderboard()" role="form">
        <div class="form-group" ng-class="{ 'has-error': form.dropdownLeaderboard.$dirty && form.dropdownLeaderboard.$error.required }">
            <label for="worldname">Select Activity</label>

            <select id="dropdownLeaderboard" name="dropdownLeaderboard" ng-model="vm.leaderboard.ActivityId" class="form-control" required>
                <option value="0">----Select----</option>
                <option data-ng-repeat="t in vm.ActivityList" value="{{t.Id}}">{{t.ActName}}</option>
            </select>

            <span ng-show="form.dropdownLeaderboard.$dirty && form.dropdownLeaderboard.$error.required" class="help-block">Activity is required</span>
        </div>
        <div class="form-actions">
            <button type="submit" ng-disabled="form.$invalid || myApp.dataLoading" class="btn btn-primary">
                <span> Save</span>
            </button>
            <a href="#Leaderboard" class="btn btn-default">< Go Back</a>
            <img ng-if="myApp.dataLoading" src="data:image/gif;base64," />
        </div>
        <div class="form-actions">
            <span style="color:red">
                {{vm.errorMessage}}
            </span>
        </div>
    </form>
</div>

